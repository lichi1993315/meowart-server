# Application
APP_NAME=Meowart API
DEBUG=false

# Database (PostgreSQL with asyncpg)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/meowart

# Session / Cookie Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
SESSION_COOKIE_NAME=session_id
SESSION_COOKIE_DOMAIN=.meowart.ai
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax
SESSION_MAX_AGE=604800

# CORS / URLs
FRONTEND_URL=https://meowart.ai
BACKEND_URL=https://api.meowart.ai

# Google OAuth 2.0 (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.meowart.ai/api/auth/google/callback

# Email (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@meowart.ai
